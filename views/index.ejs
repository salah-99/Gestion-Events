<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= siteTitle %> - <%= pageTitle %></title>
    <style>
        *{border-radius: 0px !important;}
        body{
            font-family: 'Poppins';
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-primary">
        <span class="navbar-brand" style="color: #fff;"><%= pageTitle %></span>
    </nav>
        <div class="col s12" style="margin-top: 3%;">
            <% if (items.length > 0) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th style="width: 1%;text-align: center;">ID</th>
                            <th style="width: 15%;">Name</th>
                            <th style="width: 20%;">Start Date</th>
                            <th style="width: 20%;">End Date</th>
                            <th style="width: 20%;">Description</th>
                            <th style="width: 10%;">Location</th>
                            <th solspan="2" style="width: 20%;text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach(function(item, index){ %>
                            <tr>
                                <td style="width: 1%;text-align: center;"><%= index + 1 %></td>
                                <td style="width: 15%;"><%= item.e_name %></td>
                                <td style="width: 20%;"><%= item.e_start_date %></td>
                                <td style="width: 20%;"><%= item.e_end_date %></td>
                                <td style="width: 20%;"><%= item.e_desc %></td>
                                <td style="width: 10%;"><%= item.e_location %></td>
                                <td solspan="2" style="width: 20%;text-align: center;">
                                    <a href="/event/edit/<%= item.e_id %>" class="btn btn-success">Edit</a>
                                    <a href="/event/delete/<%= item.e_id %>" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% }else{ %>
                <p><strong>There are no records available</strong></p>
            <% } %>
        </div>
            <div class="col s12" style="margin-top: 3%;">
                <a href="/event/add" class="btn btn-success btn-lg">Add new event</a>
            </div>
    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
